#!/bin/bash

# Check if LAGOON_HOST_DATA_DIR is set
if [ -z "${LAGOON_HOST_DATA_DIR}" ]; then
  echo "Error: LAGOON_HOST_DATA_DIR is not set."
  exit 1
fi

# Check if LAGOON_HOST_PLUGINS_DIR is set
if [ -z "${LAGOON_HOST_PLUGINS_DIR}" ]; then
  echo "Error: LAGOON_HOST_PLUGINS_DIR is not set."
  exit 1
fi

# If both variables are set, continue the script
echo "Both environment variables are set."